generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
}

model TryoutCpns{
  id      Int @id @default(autoincrement())
  tryoutName String
  slug        String @unique
  soal SoalCpns[]
}

enum KategoriMateri{
  tiu 
  twk
  tkp
}

model SoalCpns{
  id  Int @id @default(autoincrement())
  soal String
  tryoutCpnsId Int
  tryout    TryoutCpns   @relation(fields: [tryoutCpnsId], references: [id])
  jenisMateri KategoriMateri
  optionA String?
  optionB String?
  optionC String?
  optionD String?
  optionE String?
  correctOption String?
  optionAImage String?
  optionBImage String?
  optionCImage String?
  optionDImage String?
  optionEImage String?
}

model TryoutPppk{
  id      Int @id @default(autoincrement())
  tryoutName String
  slug        String @unique
  soal SoalPppk[]
}

model SoalPppk{
  id  Int @id @default(autoincrement())
  soal String
  tryoutPppkId Int
  tryout    TryoutPppk   @relation(fields: [tryoutPppkId], references: [id])
  jenisMateri KategoriMateri
  optionA String?
  optionB String?
  optionC String?
  optionD String?
  optionE String?
  correctOption String?
  optionAImage String?
  optionBImage String?
  optionCImage String?
  optionDImage String?
  optionEImage String?
}

model Materi{
  id     Int @id @default(autoincrement())
  title   String
  slug    String @unique
  topikMaterial TopikMateri[]
}

model TopikMateri{
  id     Int @id @default(autoincrement())
  title   String
  slug    String @unique
  materiId Int
  materi    Materi   @relation(fields: [materiId], references: [id])
}


