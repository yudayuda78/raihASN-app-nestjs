generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
}

model Tryout{
  id      Int @id @default(autoincrement())
  tryoutName String
  slug        String @unique
  soal Soal[]
}

model Soal{
  id  Int @id @default(autoincrement())
  soal String
  tryoutId Int
  tryout    Tryout   @relation(fields: [tryoutId], references: [id])
}
